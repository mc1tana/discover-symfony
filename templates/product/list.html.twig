{% extends 'base.html.twig' %}


{% block body %}
 
<h1 class='text-center mb-5 text-primary'> list produits </h1>
<div class="container">
<table class="table table-striped shadow " >
    <thead>
        <tr>
            <td>#</td>
            <td>name</td>
            <td>slug</td>
            <td>description</td>
            <td>prix</td>
            <td>action</td>


        </tr>
    </thead>
    <tbody>
    {% for key,product in products %}
         <tr>
            <td>{{key}}</td>
            <td>{{product.name}}</td>
            <td>{{product.slug}}</td>
            <td>{{product.description}}</td>
            <td>{{product.prix}} &euro;</td>
            <td><a href="{{ path('show', {'slug': product.slug}) }}" class="btn btn-primary">action</a></td>


        </tr>
    {% endfor %}
    
    </tbody>
</table>
<div>
<p>Page {{current_page}} sur {{maxpage}}</p>

<div aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
  {% if current_page != 1 %}
    <li class="page-item"><a class="page-link" href="{{ path('app_product_list', {'page': current_page - 1}) }}">Previous</a></li>
    {% endif %}
  {% for i in 1..maxpage %}

    <li class="page-item {{(current_page == i)?'active' : ' '}}"><a class="page-link" href="{{ path('app_product_list', {'page': i}) }}">{{i}}</a></li>
    {% endfor %}
     {% if current_page != maxpage %}
    
    <li class="page-item"><a class="page-link" href="{{ path('app_product_list', {'page': current_page + 1}) }}">next</a></li>
{% endif %}
    
   

  </ul>
</div>

{% endblock %}
